{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".(test|spec)\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^bn.js$": "<rootDir>/node_modules/bn.js",
      "^asn1.js$": "<rootDir>/node_modules/asn1.js",
      "^hash.js$": "<rootDir>/node_modules/hash.js",
      "^(\\.\\.?\\/.+)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
}