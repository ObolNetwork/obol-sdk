{
  "name": "@obolnetwork/obol-sdk",
  "version": "2.2.3",
  "description": "A package for creating Distributed Validators using the Obol API.",
  "bugs": {
    "url": "https://github.com/obolnetwork/obol-sdk/issues"
  },
  "homepage": "https://docs.obol.org/",
  "keywords": [
    "Obol",
    "Distributed Validators",
    "Ethereum"
  ],
  "scripts": {
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build:clean": "rm -rf ./dist",
    "build": "npm-run-all build:clean compile",
    "test": "jest ./test/methods.test.ts",
    "generate-typedoc": "typedoc",
    "npm:publish": "npm publish --tag latest",
    "release": "release-it",
    "release:dry": "release-it --dry-run --no-npm",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\" --fix",
    "lint-ci": "eslint \"{src,test}/**/*.{js,ts}\"",
    "prettier-ci": "prettier --check \"{src,test}/**/*.{js,ts}\"",
    "prettier": "prettier --write \"{src,test}/**/*.{js,ts}\""
  },
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "typings": "./dist/types/src/index.d.ts",
  "author": "Obol Labs (https://obol.org)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obolnetwork/obol-sdk.git"
  },
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@chainsafe/bls": "6.0.3",
    "@chainsafe/blst": "^0.2.9",
    "@chainsafe/discv5": "^0.5.1",
    "@chainsafe/ssz": "^0.14.0",
    "@metamask/eth-sig-util": "^7.0.1",
    "@safe-global/protocol-kit": "4.1.1",
    "@safe-global/safe-core-sdk-types": "5.1.0",
    "@types/pdf-parse": "^1.1.4",
    "ajv": "^8.12.0",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.4.7",
    "elliptic": "^6.5.4",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "6.4.0",
    "nock": "^13.5.3",
    "pdf-parse": "^1.1.1",
    "semver": "^7.6.0",
    "typescript-eslint": "^7.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^28.1.8",
    "@types/node": "^20.2.5",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^9.0.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^28.1.3",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "release-it": "^17.2.1",
    "ts-jest": "^28.0.8",
    "tsup": "^6.7.0",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^4.0.0-next.50",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">= 16"
  },
  "files": [
    "package.json",
    "README.md",
    "dist",
    "src"
  ],
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore(release): v${version}",
      "push": true,
      "commit": true,
      "tag": true,
      "requireCommits": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "draft": true
    },
    "npm": {
      "publish": false,
      "ignoreVersion": false
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p --hide-credit"
    }
  },
  "jest": {
    "transform": {
      "\\.[jt]sx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^bn.js$": "<rootDir>/node_modules/bn.js",
      "^asn1.js$": "<rootDir>/node_modules/asn1.js",
      "^hash.js$": "<rootDir>/node_modules/hash.js",
      "(.+)\\.js": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
